@{
    ViewBag.Title = ViewBag.CateName;
}
@using Site.Videos.DataAccess.Model;
@using Site.Untity;
@{

    IList<VideoInfo> list = ViewBag.list;

    int pageIndex = ViewBag.pageIndex;
    int pageSize = ViewBag.pageSize;
    int rowCount = ViewBag.rowCount;
}

<div id="page-content" class="archive-page">

    <div class="container">
        <div class="row">
            <div id="main-content" class="col-md-8">
                @{
                    if (list != null && list.Count > 0)
                    {
                        for (int i = 0; i < list.Count; i++)
                        {
                            <div style="text-align: center;">
                                <article style="display:inline-block;">
                                    <a href="@UntityTool.GenerateVideoDetailUrl(list[i].v_c_id.Value,list[i].Id)" target="_blank"><h2 class="vid-name" style="max-width:350px;">@list[i].v_titile.SubOmitString(15)</h2></a>
                                    <div class="info">
                                        <span><i class="fa fa-calendar"></i>@list[i].v_createTime.Value.ToStringFullDate()</span>
                                    </div>
                                    <div class="wrap-vid">
                                        <div class="zoom-container" style="max-width:350px;">
                                            <div class="zoom-caption">
                                                <span>@list[i].v_timeLength</span>
                                                <a href="@UntityTool.GenerateVideoDetailUrl(list[i].v_c_id.Value,list[i].Id)" target="_blank">
                                                    <i class="fa fa-play-circle-o fa-5x" style="color: #fff"></i>
                                                </a>
                                                <p>@list[i].v_titile.SubOmitString(15)</p>
                                            </div>
                                            <img src="@list[i].v_coverImgSrc">
                                        </div>
                                    </div>
                                </article>

                                @{
                                    i++;
                                    if ((i) < list.Count)
                                    {
                                        <article style="display:inline-block;">
                                            <a href="@UntityTool.GenerateVideoDetailUrl(list[i].v_c_id.Value,list[i].Id)" target="_blank"><h2 class="vid-name" style="max-width:350px;">@list[i].v_titile.SubOmitString(15)</h2></a>
                                            <div class="info">
                                                <span><i class="fa fa-calendar"></i>@list[i].v_createTime.Value.ToStringFullDate()</span>
                                            </div>
                                            <div class="wrap-vid">
                                                <div class="zoom-container" style="max-width:350px;">
                                                    <div class="zoom-caption">
                                                        <span>@list[i].v_timeLength</span>
                                                        <a href="@UntityTool.GenerateVideoDetailUrl(list[i].v_c_id.Value,list[i].Id)" target="_blank">
                                                            <i class="fa fa-play-circle-o fa-5x" style="color: #fff"></i>
                                                        </a>
                                                        <p>@list[i].v_titile.SubOmitString(15)</p>
                                                    </div>
                                                    <img src="@list[i].v_coverImgSrc">
                                                </div>
                                            </div>
                                        </article>
                                    }
                                }
                                <div class="line"></div>
                            </div>
                        }
                    }
                }

                <center>
                    @Html.Raw(UntityTool.CreateListPage(3, pageSize, pageIndex, rowCount, string.Format("/List/{0}.html", ViewBag.c_id)))
                </center>
            </div>
            @{
                Html.RenderPartial("../Sidebar/Video_Index_Sidebar");
            }
        </div>
    </div>

</div>
