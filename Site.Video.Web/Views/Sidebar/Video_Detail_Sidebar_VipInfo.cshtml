@using Site.Videos.DataAccess.Model;
@using Site.Untity;
@using Site.Video.Web.Tools;

<div class="widget wid-follow">
    <div class="heading"><h4><i class="fa fa-users"></i> 会员信息</h4></div>
    <div class="content">
        @{
            UserInfo uInfo = HttpContextUntity.CurrentUser;
            string levelName = uInfo.u_level.Value.ValueToEnumName<SiteEnum.AccountLevel>();
            string regTime = uInfo.u_regTime.Value.ToShortDateString();
            string expTime = uInfo.u_expriseTime.Value.ToShortDateString();
        }
        <ul class="list-inline">
            <li>
                <a href="facebook.com/">
                    <div class="box-facebook">
                        <span class="fa fa-star fa-2x icon"></span>
                        <span>Level</span>
                        <span>@levelName</span>
                    </div>
                </a>
            </li>
            <li>
                <a href="facebook.com/">
                    <div class="box-twitter">
                        <span class="fa fa-key fa-2x icon"></span>
                        <span>Regist</span>
                        <span>@regTime</span>
                    </div>
                </a>
            </li>
            <li>
                <a href="facebook.com/">
                    <div class="box-google">
                        <span class="fa fa-hourglass-half fa-2x icon"></span>
                        <span>Expires</span>
                        <span>@expTime</span>
                    </div>
                </a>
            </li>
        </ul>
    </div>
</div>